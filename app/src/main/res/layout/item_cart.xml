<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rl_cart_item"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white">

        <CheckBox
            android:id="@+id/id_checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:checked="false"
            android:button="@drawable/checkbox_style"/>
        <ImageView
            android:id="@+id/iv_Cart_picture"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/today_activity_default"
            android:scaleType="fitXY"
            android:layout_toRightOf="@+id/id_checkbox1"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="海底世界儿童票"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/iv_Cart_picture"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/tv_price"
            android:layout_toRightOf="@+id/iv_Cart_picture"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/iv_dele_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dele"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:background="#E8F4FF"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_add_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/jia"
                android:layout_toRightOf="@+id/tv_goods_num"
                android:layout_weight="1"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥35"
            android:textSize="15sp"
            android:textColor="@color/google_yellow"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_Cart_picture"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divide_line"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/iv_Cart_picture"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>


</LinearLayout>