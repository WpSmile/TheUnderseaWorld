<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/personal_top"
              android:orientation="vertical"
              android:paddingTop="10dp">

    <LinearLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.sdmy.seabed_view.CircleImageView
        android:id="@+id/ci_seabed_personal_item_head"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/seabed_personal_head"
        app:border_color="#E9E9E9"
        app:border_width="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="right"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="更换头像"
                android:textSize="16sp"
                android:layout_marginRight="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@mipmap/seabed_address_return_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_marginLeft="20dp"
        android:background="#E8E8E8"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>
