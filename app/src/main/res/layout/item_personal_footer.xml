<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/personal_bottom"
              android:paddingLeft="20dp"
              android:gravity="center_vertical"
              android:paddingBottom="20dp"
              android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_seabed_personal_item_context"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_vertical|left"
            android:paddingBottom="10dp"
            android:paddingRight="40dp"
            android:paddingTop="10dp"
            android:text="四川省成都市青羊区狮马路22"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="2"
            android:gravity="center_vertical|right">

            <TextView
                android:id="@+id/tv_seabed_personal_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="收货地址"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/seabed_address_return_right"/>

        </LinearLayout>
</LinearLayout>
