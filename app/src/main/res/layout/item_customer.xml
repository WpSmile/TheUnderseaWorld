<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bg_image_02">

        <RelativeLayout
            android:id="@+id/personal_rl_avatar"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            >

            <com.qifeng.theunderseaworld.view.ImageViewPlus
                android:id="@+id/personal_ivp_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/touxiang_03"/>

            <ImageView
                android:id="@+id/personal_iv_sex"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/xingbie_boy_image"/>


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="会飞的鱼"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_below="@+id/personal_rl_avatar"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/list_background">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/list_background"
            android:drawableTop="@mipmap/wodedingdan"
            android:paddingTop="3dp"
            android:text="我的订单"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/list_background"
            android:drawableTop="@mipmap/daifukuan"
            android:paddingTop="3dp"
            android:text="待付款"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/list_background"
            android:drawableTop="@mipmap/daishouhuo"
            android:paddingTop="3dp"
            android:text="待收货"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/list_background"
            android:drawableTop="@mipmap/daipingjia"
            android:paddingTop="3dp"
            android:text="待评价"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/bottom_blue"
        android:orientation="horizontal">

        <TextView
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#57F8FA"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="个人中心"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="15dp"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"

            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/top_left_without_radius">
                <TextView
                    android:id="@+id/personal_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人信息"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Personal information"
                    android:textSize="10sp"
                    android:layout_below="@+id/personal_text"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>


            <TextView
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#41E4E6">
                <TextView
                    android:id="@+id/manager_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单管理"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Integral mall"
                    android:textSize="10sp"
                    android:layout_below="@+id/manager_text"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/top_right_without_radius">
                <TextView
                    android:id="@+id/pay_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付系统"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Payment system"
                    android:textSize="10sp"
                    android:layout_below="@+id/pay_text"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="74dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bottom_left_without_radius">
                <TextView
                    android:id="@+id/balance_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="余额管理"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Balance management"
                    android:textSize="10sp"
                    android:layout_below="@+id/balance_text"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#41E4E6">
                <TextView
                    android:id="@+id/evaluation_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评价系统"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Evaluation system"
                    android:textSize="10sp"
                    android:layout_below="@+id/evaluation_text"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:layout_marginBottom="8dp">
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/bottom_blue"
        android:orientation="horizontal">

        <TextView
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#57F8FA"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="猜你喜欢"
            android:textColor="@color/white"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>