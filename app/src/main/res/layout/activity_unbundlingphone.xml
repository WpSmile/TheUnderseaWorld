<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/seabed_item_mall_line"
              android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/seabed_item_mall_bak"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_seabed_unbundlingphone_return"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:scaleType="fitEnd"
                android:src="@mipmap/seabed_address_return_left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_seabed_unbundlingphone_return"
                android:gravity="right"
                android:paddingBottom="10dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="解绑手机"
                android:textColor="#747272"
                android:textSize="16sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:background="@color/white"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/wechat_input"
                android:layout_width="230dp"
                android:layout_height="150dp">

                <LinearLayout
                    android:id="@+id/ll_seabed_unbundlingphone_layout"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:background="#878787"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <LinearLayout
                        android:background="@drawable/wechat_input"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_seabed_dindingphone_cancel"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="6dp"
                            android:textColor="#000"
                            android:textSize="14sp"
                            android:background="@drawable/unbundlingphone_right"
                            android:text="取消"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_seabed_dindingphone_disable"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="6dp"
                            android:textColor="#000"
                            android:textSize="14sp"
                            android:text="停用"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_above="@id/ll_seabed_unbundlingphone_layout"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/seabed_unbundlingphone_phone"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView2"/>

                    <TextView
                        android:text="是否停用手机联系人匹配"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="#49A2F0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
