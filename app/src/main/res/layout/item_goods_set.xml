<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_goods_set_rl"
    android:background="@drawable/item_cart_layout_noradius"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    >

    <ImageView
        android:id="@+id/item_goods_set_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/login_background_image"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/item_goods_set_image_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close"
        android:background="@color/bottom_blue"
        android:layout_alignParentRight="true"/>

    <TextView
    android:id="@+id/item_goods_set_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="商品名称"
    android:textColor="@color/bottom_blue"
    android:layout_toRightOf="@+id/item_goods_set_image"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="10dp"
    />
    <TextView
        android:id="@+id/item_goods_set_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="海底世界老年票"
        android:layout_toRightOf="@+id/item_goods_set_image"
        android:layout_below="@+id/item_goods_set_name"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:id="@+id/item_goods_set_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店名"
        android:textColor="@color/bottom_blue"
        android:layout_toRightOf="@+id/item_goods_set_image"
        android:layout_below="@id/item_goods_set_name_title"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/item_goods_set_shop_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="海底世界官方旗舰店"
        android:layout_toRightOf="@+id/item_goods_set_image"
        android:layout_below="@+id/item_goods_set_shop_name"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:id="@+id/item_goods_set_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单价"
        android:textColor="@color/bottom_blue"
        android:layout_toRightOf="@+id/item_goods_set_image"
        android:layout_below="@id/item_goods_set_shop_name_title"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/item_goods_set_price_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥35"
        android:layout_toRightOf="@+id/item_goods_set_image"
        android:layout_below="@+id/item_goods_set_price"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:id="@+id/item_goods_set_kucun_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="库存"
        android:textColor="@color/bottom_blue"
        android:layout_toRightOf="@+id/item_goods_set_image"
        android:layout_below="@id/item_goods_set_price_title"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/item_goods_set_kucun_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="999"
        android:layout_toRightOf="@+id/item_goods_set_image"
        android:layout_below="@+id/item_goods_set_kucun_name"
        android:layout_marginLeft="30dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/item_goods_set_image"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="发布商品"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button_without_border_radius"
        android:layout_below="@id/item_goods_set_kucun_name_title"/>
</RelativeLayout>