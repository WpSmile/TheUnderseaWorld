<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_introduce"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">


    <include layout="@layout/item_common_title" />

    <com.qifeng.theunderseaworld.view.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/home_rl"
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <com.qifeng.theunderseaworld.view.SlideAutoLoopView
                    android:id="@+id/intro_slideAuto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true">

                </com.qifeng.theunderseaworld.view.SlideAutoLoopView>

                <com.qifeng.theunderseaworld.view.FlowIndicator
                    android:id="@+id/intro_flowIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"
                    app:count="3"
                    app:focus_color="@color/blue"
                    app:normal_color="@color/white"
                    app:space="3dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_image_05">

                <TextView
                    android:id="@+id/text_introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/undersea_introduce"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

    </com.qifeng.theunderseaworld.view.MyScrollView>




</LinearLayout>
