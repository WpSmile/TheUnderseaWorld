<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/seabed_item_mall_line"
              android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="@color/seabed_item_mall_bak"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_seabed_shelves_release"
            android:text="立即发布"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="10dp"
            android:background="@color/seabed_item_mall_line"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_above="@id/tv_seabed_shelves_release"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/seabed_item_mall_bak"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/seabed_item_mall_line">

                <ImageView
                    android:id="@+id/iv_seabed_shelves_return"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitEnd"
                    android:src="@mipmap/seabed_shopping_return"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_seabed_shelves_return"
                    android:gravity="right"
                    android:paddingBottom="10dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:text="宝贝上架"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circular"/>

                <ImageView
                    android:id="@+id/iv_seabed_shelves_camera"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/seabed_shelves_camera"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">

                <EditText
                    android:id="@+id/et_seabed_shelves_name"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/shelves_name"
                    android:gravity="top|left"
                    android:hint="商品名称"
                    android:textCursorDrawable="@drawable/nickname_cursor"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:textColor="#484848"
                    android:textColorHint="#A2A2A2"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical|left"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="宝贝单价"
                        android:textColor="#484848"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/et_seabed_shelves_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/white"
                        android:gravity="clip_vertical|left"
                        android:inputType="number"
                        android:singleLine="true"
                        android:paddingBottom="5dp"
                        android:textCursorDrawable="@drawable/nickname_cursor"
                        android:paddingTop="5dp"
                        android:textColor="#484848"
                        android:textColorHint="#484848"
                        android:textSize="14sp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:background="#ADADAD"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical|left"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="库存"
                        android:textColor="#484848"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/et_seabed_shelves_stock"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:singleLine="true"
                        android:background="@color/white"
                        android:gravity="clip_vertical|left"
                        android:textCursorDrawable="@drawable/nickname_cursor"
                        android:inputType="number"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:textColor="#484848"
                        android:textColorHint="#484848"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical|left"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="宝贝描述"
                        android:textColor="#484848"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/et_seabed_shelves_depict"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/white"
                        android:gravity="clip_vertical|left"
                        android:inputType="number"
                        android:textCursorDrawable="@drawable/nickname_cursor"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:textColor="#484848"
                        android:textColorHint="#484848"
                        android:textSize="14sp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:background="#ADADAD"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical|left"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="发货地"
                        android:textColor="#484848"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/white"
                        android:gravity="center_vertical|right"
                        android:inputType="number"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="海底世界"
                        android:textColor="#484848"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
