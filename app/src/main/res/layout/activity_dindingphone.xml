<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:fitsSystemWindows="true"
              android:background="@color/seabed_item_mall_line"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/seabed_item_mall_bak"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_seabed_dindingphone_personal"
                android:layout_width="80dp"
                android:text="解绑"
                android:paddingTop="10dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:gravity="right"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:textColor="#747272"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_seabed_dindingphone_return"
                android:src="@mipmap/seabed_address_return_left"
                android:layout_width="30dp"
                android:scaleType="fitEnd"
                android:layout_centerVertical="true"
                android:layout_height="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="绑定手机"
                android:paddingTop="10dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:gravity="right"
                android:layout_toRightOf="@id/iv_seabed_dindingphone_return"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:textColor="#747272"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:background="@color/seabed_item_mall_bak"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                android:layout_height="200dp"/>

            <LinearLayout
                android:layout_width="230dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:id="@+id/ll_seabed_dindingphone_layout"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/phone_personal"
                android:layout_height="170dp">

                <TextView
                    android:id="@+id/tv_seabed_dindingphone_country"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:text="中国 +86"
                    android:layout_weight="1"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:drawableRight="@mipmap/seabed_address_return_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:background="#C0C0C0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/et_seabed_dindingphone_no"
                        android:background="#FFF"
                        android:layout_width="0dp"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:layout_weight="3"
                        android:maxLength="11"
                        android:hint="手机号"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textCursorDrawable="@drawable/nickname_cursor"
                        android:layout_marginRight="3dp"
                        android:textSize="14sp"
                        android:textColorHint="#B6B6B6"
                        android:textColor="#B6B6B6"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_seabed_dindingphone_proving"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:text="发送验证码"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:gravity="center|center_vertical"
                        android:background="@drawable/details_count"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView
                    android:layout_marginTop="8dp"
                    android:background="#C0C0C0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/iv_seabed_dindingphone_verify"
                    android:background="#FFF"
                    android:layout_width="match_parent"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:layout_marginRight="3dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:text="验证码"
                    android:drawableRight="@mipmap/seabed_dindingphone_verify"
                    android:textColor="#B6B6B6"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:background="#C0C0C0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_seabed_dindingphone_complete"
                android:layout_below="@id/ll_seabed_dindingphone_layout"
                android:layout_width="230dp"
                android:layout_marginTop="8dp"
                android:layout_alignRight="@id/ll_seabed_dindingphone_layout"
                android:padding="6dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="完 成"
                android:textColor="#FFF"
                android:textSize="15sp"
                android:background="@drawable/details_count"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
