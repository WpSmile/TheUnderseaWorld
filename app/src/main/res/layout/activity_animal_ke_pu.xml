<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_animal_ke_pu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/kepu_rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bottom_blue">
        <TextView
            android:id="@+id/kepu_txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="海洋动物科普"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/kepu_img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/kepu_img_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/find_image"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp">
            <View
                android:id="@+id/home_title_divide_line2"
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:background="@color/vertical_line"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当红动物"
                android:textColor="@color/bottom_blue"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/home_title_divide_line2"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="0,1,2,3,4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp">
            <TableRow>
                <Button
                    android:text="鲨鱼"
                    android:layout_margin="5dp"
                    android:layout_height="35dp"
                    android:textColor="@color/bottom_blue"
                    android:background="@drawable/buttom_no_radius_with_solid"
                    />

                <Button
                    android:text="水母"
                    android:layout_margin="5dp"
                    android:layout_height="35dp"
                    android:textColor="@color/bottom_blue"
                    android:background="@drawable/buttom_no_radius_with_solid"
                    />
                <Button
                    android:text="海豹"
                    android:layout_margin="5dp"
                    android:layout_height="35dp"
                    android:textColor="@color/bottom_blue"
                    android:background="@drawable/buttom_no_radius_with_solid"
                    />
                <Button
                    android:text="海龟"
                    android:layout_margin="5dp"
                    android:layout_height="35dp"
                    android:textColor="@color/bottom_blue"
                    android:background="@drawable/buttom_no_radius_with_solid"
                    />
                <Button
                    android:text="海马"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:textColor="@color/bottom_blue"
                    android:background="@drawable/buttom_no_radius_with_solid"
                    />
            </TableRow>

            <TableRow>
                <Button
                    android:text="六角龙"
                    android:layout_margin="5dp"
                    android:layout_height="35dp"
                    android:textColor="@color/bottom_blue"
                    android:background="@drawable/buttom_no_radius_with_solid"
                    />
                <Button
                    android:text="电鳗"
                    android:layout_margin="5dp"
                    android:layout_height="35dp"
                    android:textColor="@color/bottom_blue"
                    android:background="@drawable/buttom_no_radius_with_solid"
                    />
                <Button
                    android:text="福鳄"
                    android:layout_margin="5dp"
                    android:layout_height="35dp"
                    android:textColor="@color/bottom_blue"
                    android:background="@drawable/buttom_no_radius_with_solid"
                    />
                <Button
                    android:text="雪鲷"
                    android:layout_margin="5dp"
                    android:layout_height="35dp"
                    android:textColor="@color/bottom_blue"
                    android:background="@drawable/buttom_no_radius_with_solid"
                    />
                <Button
                    android:text="刺鳐"
                    android:layout_margin="5dp"
                    android:layout_height="35dp"
                    android:textColor="@color/bottom_blue"
                    android:background="@drawable/buttom_no_radius_with_solid"
                    />
            </TableRow>


        </TableLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp">

            <com.qifeng.theunderseaworld.view.SlideAutoLoopView
                android:id="@+id/kepu_slideAuto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/nopic">
            </com.qifeng.theunderseaworld.view.SlideAutoLoopView>
        </RelativeLayout>

        <com.qifeng.theunderseaworld.view.FlowIndicator
            android:id="@+id/kepu_flowIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:count="4"
            app:focus_color="@color/blue"
            app:space="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:text="@string/default_introduce_animal"
            />

    </LinearLayout>

</LinearLayout>
