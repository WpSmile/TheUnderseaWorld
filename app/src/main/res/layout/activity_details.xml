<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/seabed_current_one"
              android:background="@color/seabed_item_mall_line"
              android:fitsSystemWindows="true">

    <LinearLayout
        style="@style/seabed_current_one"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/seabed_current_three"
            android:padding="@dimen/seabed_shopping_padding">

            <ImageView
                android:id="@+id/iv_seabed_details_return"
                style="@style/seabed_return"/>

            <TextView
                style="@style/seabed_title"
                android:textSize="16sp"
                android:text="@string/seabed_details_name"/>

        </RelativeLayout>

        <RelativeLayout
            style="@style/seabed_current_one">

            <LinearLayout
                android:id="@+id/sseabed_details_layout"
                style="@style/seabed_current_two"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <TextView
                    style="@style/seabed_details_line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/seabed_item_mall_line"/>

                    <ImageView
                        android:id="@+id/lv_seabed_details_trade"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:scaleType="center"
                        android:src="@mipmap/seabed_details_trade"/>

                    <TextView
                        android:id="@+id/tv_seabed_details_cart"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:background="@color/seabed_item_mall_line"
                        android:gravity="center"
                        android:text="加入购物车"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>

                </LinearLayout>
            </LinearLayout>

            <ScrollView
                android:layout_above="@id/sseabed_details_layout"
                android:id="@+id/sv_seabed_details_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_seabed_details_sign"
                        style="@style/seabed_page"
                        android:scaleType="fitXY"
                        android:src="@mipmap/seabed_mall_cir"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:paddingBottom="15dp"
                        android:paddingLeft="25dp"
                        android:paddingTop="15dp">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="#FFF">

                            <TextView
                                android:id="@+id/tv_seabed_details_ticket"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:text="海底世界老年票"
                                android:textColor="#2D2D2D"
                                android:textSize="18sp"/>

                            <TextView
                                android:id="@+id/tv_seabed_details_from"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_seabed_details_ticket"
                                android:layout_marginTop="3dp"
                                android:background="@color/white"
                                android:text="海底世界官方旗舰店"
                                android:textColor="@color/seabed_item_mall_line"
                                android:textSize="12sp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_seabed_details_from"
                                android:layout_marginTop="13dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_seabed_details_money"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:background="@color/white"
                                    android:text="￥35"
                                    android:textColor="#FF7F21"
                                    android:textSize="25sp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:layout_marginRight="15dp"
                                    android:gravity="right|center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_seabed_details_minus"
                                        android:src="@mipmap/seabed_details_minus"
                                        android:layout_width="wrap_content"
                                        android:scaleType="center"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:id="@+id/tv_seabed_details_number"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_vertical"
                                        android:background="#fff"
                                        android:gravity="center"
                                        android:text="1"
                                        android:textColor="#49A2F0"
                                        android:textSize="18sp"/>

                                    <ImageView
                                        android:id="@+id/iv_seabed_details_add"
                                        android:src="@mipmap/seabed_details_money_add"
                                        android:layout_width="wrap_content"
                                        android:scaleType="center"
                                        android:layout_height="wrap_content"/>

                                </LinearLayout>

                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="1dp"
                                android:layout_height="100dp"
                                android:layout_gravity="bottom"
                                android:background="#868686"/>

                            <ImageView
                                android:id="@+id/iv_seabed_details_share"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:scaleType="center"
                                android:src="@mipmap/sseabed_details_share"/>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#E7E7E7"/>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:paddingLeft="25dp"
                            android:paddingTop="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:text="评价"
                                android:textColor="#2D2D2D"
                                android:textSize="18sp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@color/white"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_seabed_details_signone"
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/details_mark"
                                    android:gravity="center"
                                    android:padding="3dp"
                                    android:text="方便"
                                    android:textColor="@color/seabed_item_mall_line"
                                    android:textSize="@dimen/seabed_shopping_fourteen"/>

                                <TextView
                                    android:id="@+id/tv_seabed_details_signtwo"
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:background="@drawable/details_mark"
                                    android:gravity="center"
                                    android:padding="3dp"
                                    android:text="便宜"
                                    android:textColor="@color/seabed_item_mall_line"
                                    android:textSize="@dimen/seabed_shopping_fourteen"/>

                                <TextView
                                    android:id="@+id/tv_seabed_details_signthree"
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:background="@drawable/details_mark"
                                    android:gravity="center"
                                    android:padding="3dp"
                                    android:text="快捷"
                                    android:textColor="@color/seabed_item_mall_line"
                                    android:textSize="@dimen/seabed_shopping_fourteen"/>

                            </LinearLayout>

                            <com.qifeng.theunderseaworld.view.ListViewForScrollView
                                android:id="@+id/lv_seabed_details_word"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="25dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/white"
                                android:divider="@null"
                                android:dividerHeight="0dp"
                                android:scrollbars="none"/>

                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
