<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_rl_animal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_back"
    >

    <ImageView
        android:id="@+id/item_animal_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/login_background_image"
        android:scaleType="fitXY"
        android:layout_margin="5dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        >

        <com.qifeng.theunderseaworld.view.RotateTextView
            android:id="@+id/home_item_rtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:text="Shark"
            android:textSize="10sp"
            android:textColor="@color/bottom_blue"
            />
        <TextView
            android:id="@+id/home_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="鲨鱼"
            android:textColor="@color/bottom_blue"
            android:gravity="center_horizontal"
            android:maxWidth="15sp"
            android:textSize="15sp"
            />
    </LinearLayout>

</RelativeLayout>